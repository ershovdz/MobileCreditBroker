<UserControl x:Class="Credits.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Credits"
    mc:Ignorable="d"
	 xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
   d:DesignWidth="480" d:DesignHeight="800" >
    
    <Grid x:Name="LayoutRoot" Background="White" Height="800" Width="480" d:IsHidden="True">
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="SplashScreenImage.jpg" x:Name="logoImage" Stretch="None">
                <Image.Projection>
                    <PlaneProjection/>
                </Image.Projection>
            </Image>
        </StackPanel>
    </Grid>
</UserControl>

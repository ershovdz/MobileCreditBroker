<UserControl x:Class="Credits.Informer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignHeight="60">
    <Grid Margin="0, 0, 0, 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Name="Title" Source="Images/credit_card_icon.png" Height="40" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        <TextBlock Grid.Column="1" Name="Text" Height="60" Text="Кредиты" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Stretch" Foreground="Brown"/>
    </Grid>
</UserControl>
